<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aether">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="true"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.CameraActivity" android:label="@string/title_activity_camera"/>
        <activity android:name=".activities.ReconstructionListActivity" android:label="@string/title_reconstruction_list"/>
        <activity android:name=".activities.ReconstructionDetailActivity" android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aether.activities.ReconstructionListActivity"/>
        </activity>
        <service android:name=".rendering.ReconstructionService"/>
        <provider android:name=".database.DatabaseProvider"
            android:authorities="com.example.aether.database.DatabaseProvider.content"/>
    </application>
</manifest>